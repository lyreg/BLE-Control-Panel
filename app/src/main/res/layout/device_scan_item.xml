<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="8dp">

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:descendantFocusability="blocksDescendants">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:gravity="center"
                android:layout_toStartOf="@+id/connect_button"
                android:id="@+id/tableLayout">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tableRow1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Device:"
                        android:textColor="@color/indigo_primary_text"
                        android:layout_gravity="right"
                        android:textSize="20dp"
                        android:id="@+id/labelForName"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="99"
                        android:layout_span="3"
                        android:textSize="20dp"
                        android:textColor="@color/indigo_primary_text"
                        android:id="@+id/deviceName"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:id="@+id/tableRow2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Address:"
                        android:textColor="@color/indigo_secondary_text"
                        android:layout_gravity="right"
                        android:textSize="14dp"
                        android:id="@+id/labelForAddress"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="99"
                        android:layout_span="3"
                        android:textSize="14dp"
                        android:textColor="@color/indigo_secondary_text"
                        android:id="@+id/deviceAddress"/>


                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:id="@+id/tableRow3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom|end"
                        android:layout_weight="1"
                        android:text="Status:"
                        android:textColor="@color/indigo_secondary_text"
                        android:textSize="12dp"
                        android:id="@+id/labelForBond"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="49"
                        android:text=""
                        android:textSize="12dp"
                        android:textColor="@color/indigo_secondary_text"
                        android:id="@+id/deviceBond"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom|end"
                        android:layout_weight="1"
                        android:text="Rssi:"
                        android:textColor="@color/indigo_secondary_text"
                        android:textSize="12dp"
                        android:id="@+id/labelForRssi"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="49"
                        android:text=""
                        android:textSize="12dp"
                        android:textColor="@color/indigo_secondary_text"
                        android:id="@+id/deviceRssi"/>
                </TableRow>

            </TableLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_click_ripple"
                android:elevation="2dp"
                android:text="connect"
                android:textColor="@color/indigo_icons"
                android:id="@+id/connect_button"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

