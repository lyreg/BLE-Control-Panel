<resources>

     <!--Base application theme.-->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>

        <!-- Actionbar color -->
        <item name="colorPrimary">@color/indigo_primary</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/indigo_primary_dark</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/indigo_icons</item>

        <item name="android:textColorPrimary">@color/teal_primary</item>
        <item name="android:colorControlActivated">@color/teal_accent</item>
        <item name="android:colorControlNormal">@color/teal_primary</item>
        <item name="android:divider">@color/indigo_secondary_text</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>

    </style>

    <style name="MenuTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
